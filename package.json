{
  "name": "oas-sandbox",
  "version": "1.0.0",
  "description": "A stateful, spec-first OpenAPI mock server with scenarios and state management. Recording/replay features coming in v1.1.0.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "oas-sandbox": "dist/cli/index.js"
  },
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "dev": "tsx src/cli/index.ts",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "lint": "eslint src --ext .ts,.tsx --fix",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build && npm run typecheck"
  },
  "keywords": [
    "openapi",
    "swagger",
    "mock",
    "server",
    "api",
    "testing",
    "scenarios",
    "stateful",
    "recording",
    "replay"
  ],
  "author": "OSS Core",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/naveenbhavnani/oas-sandbox.git"
  },
  "bugs": {
    "url": "https://github.com/naveenbhavnani/oas-sandbox/issues"
  },
  "homepage": "https://github.com/naveenbhavnani/oas-sandbox#readme",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1",
    "commander": "^11.1.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "@faker-js/faker": "^8.3.1",
    "fast-glob": "^3.3.2",
    "fastify": "^4.24.3",
    "http-proxy-middleware": "^2.0.6",
    "ioredis": "^5.3.2",
    "js-yaml": "^4.1.0",
    "json-pointer": "^0.6.2",
    "mustache": "^4.2.0",
    "path-to-regexp": "^6.2.1",
    "pino": "^8.16.2",
    "pino-pretty": "^10.2.3",
    "prom-client": "^15.0.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/supertest": "^2.0.16",
    "supertest": "^6.3.3",
    "@types/js-yaml": "^4.0.9",
    "@types/mustache": "^4.2.5",
    "@types/node": "^20.9.0",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "@vitest/coverage-v8": "^0.34.6",
    "@vitest/ui": "^0.34.7",
    "eslint": "^8.54.0",
    "tsx": "^4.1.1",
    "typescript": "^5.2.2",
    "vitest": "^0.34.6"
  },
  "peerDependencies": {
    "next": ">=12.0.0"
  },
  "peerDependenciesMeta": {
    "next": {
      "optional": true
    }
  }
}
